{
  "name": "talawa-api",
  "version": "1.0.0",
  "description": "talawa-api is a backend repository written using Node.js and graphql for generating APIs for the talawa flutter app.",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "start": "cross-env pm2-runtime start ./dist/index.js --watch",
    "prod": "cross-env NODE_ENV=production pm2-runtime start ./dist/index.js",
    "test-server": "cross-env NODE_ENV=test TEST_DB=talawa-test-db nodemon ./dist/index.js --ext js,graphql",
    "start-test-server-in-action": "cross-env NODE_ENV=test pm2 start ./dist/index.js -f",
    "stop-test-server-in-action": "pm2 delete all",
    "lint": "eslint . --fix && echo 'Lint complete.'",
    "setup": "npm i boxen@4.2.0 chalk@4.1.0 inquirer markdown-js marked@2.0.1 marked-terminal@4.1.0 node-cmd@5.0.0 && node ./setup/index.js",
    "file-coverage": "npm test $npm_config_testfile -- --coverage --collectCoverageFrom=$npm_config_functionfile",
    "dev": "ts-node-dev --respawn --exit-child ./src/index.js",
    "prebuild": "rimraf ./dist",
    "build": "tsc --pretty --project tsconfig.build.json",
    "postbuild": "copyfiles --error --up 1 './src/locales/*' ./dist && copyfiles --error --up 1 './src/lib/schema/*' './src/lib/schema/**/*' ./dist",
    "codegen": "graphql-codegen"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PalisadoesFoundation/talawa-api"
  },
  "keywords": [
    "chats",
    "events",
    "organization",
    "community"
  ],
  "author": "Palisadoes Foundation",
  "license": "GNU General Public License v3.0",
  "bugs": {
    "url": "https://github.com/PalisadoesFoundation/talawa-api/issues"
  },
  "homepage": "https://github.com/PalisadoesFoundation/talawa-api#readme",
  "dependencies": {
    "@graphql-tools/schema": "^8.3.5",
    "apollo-server-core": "^3.6.6",
    "apollo-server-express": "^2.25.2",
    "axios": "^0.21.2",
    "bcryptjs": "^2.4.3",
    "boxen": "^4.2.0",
    "chalk": "^4.1.0",
    "cls-bluebird": "^2.1.0",
    "cls-hooked": "^4.2.2",
    "copy-paste": "^1.3.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^8.6.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^2.0.2",
    "express-rate-limit": "^5.2.6",
    "glob-parent": "^5.1.2",
    "graphql": "^15.5.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-upload": "^12.0.0",
    "graphql-ws": "^5.6.4",
    "helmet": "^4.6.0",
    "i18n": "^0.13.3",
    "image-hash": "^4.0.1",
    "inquirer": "^8.2.4",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "markdown-js": "^0.0.4",
    "marked": "^2.0.1",
    "marked-terminal": "^4.1.0",
    "moment": "^2.29.2",
    "mongoose": "^5.13.0",
    "mongoose-paginate-v2": "^1.3.18",
    "morgan": "^1.10.0",
    "nanoid": "^3.3.4",
    "netmask": ">=2.0.1",
    "node-cmd": "^5.0.0",
    "pm2": "^5.1.2",
    "shortid": "^2.2.16",
    "uuid": "^3.4.0",
    "validator": "^13.7.0",
    "winston": "^3.7.2",
    "ws": "^7.5.7",
    "xss-clean": "^0.1.1",
    "yarn": "^1.22.10"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typescript": "^2.5.1",
    "@graphql-codegen/typescript-resolvers": "^2.6.6",
    "@types/bcrypt": "^2.0.0",
    "@types/cls-hooked": "^4.3.3",
    "@types/copy-paste": "^1.1.30",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/graphql-depth-limit": "^1.1.3",
    "@types/i18n": "^0.13.3",
    "@types/jest": "^27.5.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.42",
    "@types/uuid": "^3.4.10",
    "@types/validator": "^13.7.3",
    "copyfiles": "^2.4.1",
    "easygraphql-tester": "^5.1.6",
    "eslint": "^7.29.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.4.7",
    "netmask": ">=2.0.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.3"
  }
}
