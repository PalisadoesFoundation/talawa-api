########## Metrics Configuration ##########
# Master switch - when false, all metrics collection is disabled (default: true)
API_METRICS_ENABLED=true
# API key for /metrics/perf endpoint authentication (optional, leave empty for unprotected)
# API_METRICS_API_KEY=
# Threshold in ms for slow request warnings (default: 500)
API_METRICS_SLOW_REQUEST_MS=500
# Threshold in ms for slow operation tracking (default: 200)
API_METRICS_SLOW_OPERATION_MS=200
# Enable metrics aggregation background worker (default: true)
API_METRICS_AGGREGATION_ENABLED=true
# Cron schedule for aggregation (default: every 5 minutes)
API_METRICS_AGGREGATION_CRON_SCHEDULE="*/5 * * * *"
# Time window for aggregation in minutes (default: 5)
API_METRICS_AGGREGATION_WINDOW_MINUTES=5
# Cache TTL for aggregated metrics in seconds (default: 300)
API_METRICS_CACHE_TTL_SECONDS=300
# Maximum snapshots to retain in memory (default: 1000)
API_METRICS_SNAPSHOT_RETENTION_COUNT=1000

